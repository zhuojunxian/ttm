<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/laytop"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:gravity="right"
        android:height="80dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="24dp"
            android:layout_height="47dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/main_button_tjrw"
            android:onClick="AddNewTask"
            android:src="@drawable/more" />

        <ImageView
            android:id="@+id/popmenubt"
            android:layout_width="24dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/main_button_tbsj"
            android:onClick="showPopMenu"
            android:src="@drawable/other" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textSize="16sp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/mylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layfooter"
        android:layout_below="@+id/laytop"
        android:dividerHeight="5dp"
        android:padding="5dp"
        android:paddingBottom="40dp" >
    </ListView>

    <RelativeLayout
        android:id="@+id/layfooter"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:gravity="right"
        android:height="80dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="26dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:contentDescription="@string/main_button_tjrw"
            android:onClick="AddNewTask"
            android:src="@drawable/login" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="26dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:contentDescription="@string/main_button_tbsj"
            android:onClick="RefreshTask"
            android:src="@drawable/set" />

    </RelativeLayout>

</RelativeLayout>