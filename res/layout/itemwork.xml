<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/workno"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center"
        android:text="#1" />

    <Button
        android:id="@+id/menupub"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="进步" />

    <TextView
        android:id="@+id/workDate"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/workno"
        android:layout_alignLeft="@+id/workdesc"
        android:layout_toLeftOf="@+id/menupub"
        android:text="2015年1月2日" />

    <TextView
        android:id="@+id/workdesc"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_above="@+id/workDate"
        android:layout_toLeftOf="@+id/menupub"
        android:layout_toRightOf="@+id/workno"
        android:text="@string/task_lable_desc" />

    <TextView
        android:id="@+id/wid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="0"
        android:visibility="gone" />



</RelativeLayout>